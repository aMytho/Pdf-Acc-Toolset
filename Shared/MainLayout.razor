@inherits LayoutComponentBase
@using Blazored.Toast.Configuration

<!-- Toast messages (notifications)-->
<BlazoredToasts
    ShowProgressBar="true"
    Position="ToastPosition.BottomRight"
    Timeout="7"
    PauseProgressOnHover="true"
    ErrorClass="pdf-toast"
    InfoClass="pdf-toast"
    SuccessClass="pdf-toast"
    WarningClass="pdf-toast"
    />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="/tips">Tip of the Day</a>
            <a href="/about">About</a>
        </div>

        <article class="content px-4 text-white">
            @Body
        </article>
    </main>
</div>
